<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="253dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <!-- Product Image with rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="253dp"
        android:layout_height="152dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <com.tripian.trpcore.util.widget.ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <!-- Product Title -->
        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/semibold"
            android:maxLines="2"
            android:textColor="@color/trp_text_primary"
            android:textSize="16sp"
            tools:text="Skip the Line: Anne Frank House Tour" />

        <LinearLayout
            android:id="@+id/llRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Rating Value - Bold 14px -->
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="@color/trp_text_primary"
                android:textSize="14sp"
                tools:text="4.5" />

            <!-- Star Icon 12x12 -->
            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/ic_rating_star" />

            <!-- Review Count - Light 14px fgWeak -->
            <TextView
                android:id="@+id/tvRatingCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/trp_fgWeak"
                android:textSize="14sp"
                tools:text="1,234 opinions" />

        </LinearLayout>

        <!-- Cancellation - Medium 14px, advantage color -->
        <TextView
            android:id="@+id/tvCancellation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/trp_advantage"
            android:textSize="14sp"
            tools:text="Free cancellation" />

        <!-- Price Row - Bottom Right -->
        <LinearLayout
            android:id="@+id/llPriceRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- From Label - Medium 14sp -->
            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvFromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:textColor="@color/trp_text_primary"
                android:textSize="14sp"
                tools:text="From " />

            <!-- Price - Bold 16sp -->
            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="@color/trp_text_primary"
                android:textSize="16sp"
                tools:text="$49" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
