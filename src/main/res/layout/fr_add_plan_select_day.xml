<?xml version="1.0" encoding="utf-8"?>
<!-- FRSelectDay - Step 1: Day, City, Mode, Manual Category Selection -->
<!-- iOS Reference: AddPlanSelectDayVC.swift -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="32dp">

        <!-- ==================== -->
        <!-- ADD TO DAY Section   -->
        <!-- ==================== -->

        <!-- "Add to Day" Label -->
        <TextView
            android:id="@+id/tvAddToDay"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/light"
            android:textSize="12sp"
            android:textColor="@color/trp_text_primary"
            tools:text="Add to Day"/>

        <!-- Day Filter RecyclerView (44dp height) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDays"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_day_filter"/>

        <!-- ==================== -->
        <!-- CITY SELECTION       -->
        <!-- (hidden if single city) -->
        <!-- ==================== -->
        <LinearLayout
            android:id="@+id/llCitySelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- "City" Label -->
            <TextView
                android:id="@+id/tvCityLabel"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/light"
                android:textSize="12sp"
                android:textColor="@color/trp_text_primary"
                tools:text="City"/>

            <!-- City Selection Button (48dp, bg neutral100) -->
            <FrameLayout
                android:id="@+id/btnCitySelection"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input_field"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvSelectedCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="40dp"
                    android:fontFamily="@font/medium"
                    android:textSize="14sp"
                    android:textColor="@color/trp_text_primary"
                    tools:text="Barcelona"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_chevron_down"
                    android:tint="@color/trp_text_primary"/>

            </FrameLayout>

        </LinearLayout>

        <!-- ==================== -->
        <!-- MODE SELECTION       -->
        <!-- ==================== -->

        <!-- "How do you want to add plans?" -->
        <TextView
            android:id="@+id/tvHowToAdd"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/semibold"
            android:textSize="16sp"
            android:textColor="@color/trp_text_primary"
            tools:text="How do you want to add plans?"/>

        <!-- Smart Recommendations Card (88dp) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSmartRecommendations"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/trp_lineWeak"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Icon (52x52) -->
                <ImageView
                    android:id="@+id/ivSmartIcon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_smart_recommendations"
                    android:contentDescription="Smart Recommendations"/>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSmartTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="14sp"
                        android:textColor="@color/trp_text_primary"
                        tools:text="Smart Recommendations"/>

                    <TextView
                        android:id="@+id/tvSmartDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/medium"
                        android:textSize="12sp"
                        android:textColor="@color/trp_fgWeak"
                        android:maxLines="3"
                        tools:text="Get AI-powered recommendations"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Add Manually Card (88dp) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAddManually"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/trp_lineWeak"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Icon (52x52) -->
                <ImageView
                    android:id="@+id/ivManualIcon"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:src="@drawable/ic_add_manual"
                    android:contentDescription="Add Manually"/>

                <!-- Text Container -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvManualTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:textSize="14sp"
                        android:textColor="@color/trp_text_primary"
                        tools:text="Add Manually"/>

                    <TextView
                        android:id="@+id/tvManualDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/medium"
                        android:textSize="12sp"
                        android:textColor="@color/trp_fgWeak"
                        android:maxLines="3"
                        tools:text="Add your own activities"/>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ==================== -->
        <!-- MANUAL CATEGORIES    -->
        <!-- (visible only when Manual mode selected) -->
        <!-- ==================== -->
        <LinearLayout
            android:id="@+id/llManualCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- "Select the Categories You Want" -->
            <TextView
                android:id="@+id/tvSelectCategoriesLabel"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/semibold"
                android:textSize="16sp"
                android:textColor="@color/trp_text_primary"
                tools:text="Select Categories"/>

            <!-- 3 Manual Category Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Activities -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManualActivities"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/trp_lineWeak"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_activities"
                            android:tint="@color/trp_text_primary"/>

                        <TextView
                            android:id="@+id/tvCatActivities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:fontFamily="@font/light"
                            android:textSize="12sp"
                            android:textColor="@color/trp_text_primary"
                            android:maxLines="2"
                            tools:text="Activities"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Places of Interest -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManualPlaces"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/trp_lineWeak"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_cat_poi"
                            app:tint="@color/trp_text_primary" />

                        <TextView
                            android:id="@+id/tvCatPlaces"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:fontFamily="@font/light"
                            android:textSize="12sp"
                            android:textColor="@color/trp_text_primary"
                            android:maxLines="2"
                            tools:text="Places of Interest"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Eat & Drink -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManualEatDrink"
                    android:layout_width="0dp"
                    android:layout_height="96dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/trp_lineWeak"
                    app:cardBackgroundColor="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_food_drink"
                            android:tint="@color/trp_text_primary"/>

                        <TextView
                            android:id="@+id/tvCatEatDrink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:fontFamily="@font/light"
                            android:textSize="12sp"
                            android:textColor="@color/trp_text_primary"
                            android:maxLines="2"
                            tools:text="Eat &amp; Drink"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
