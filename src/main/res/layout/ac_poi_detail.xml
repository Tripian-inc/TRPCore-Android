<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Gallery Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpGallery"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1.2:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Back Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_back"
                        app:tint="@color/text_primary" />

                </androidx.cardview.widget.CardView>

                <!-- Page Indicator -->
                <LinearLayout
                    android:id="@+id/llPageIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/vpGallery"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Basic Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"
                tools:visibility="visible">

                <!-- City Name -->
                <TextView
                    android:id="@+id/tvCityName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/borderActive"
                    android:textSize="14sp"
                    tools:text="Amsterdam" />

                <!-- POI Name -->
                <TextView
                    android:id="@+id/tvPoiName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/bold"
                    android:includeFontPadding="false"
                    android:lineHeight="28dp"
                    android:textColor="@color/text_primary"
                    android:textSize="22sp"
                    tools:text="Anne Frank House" />

                <!-- Rating Row -->
                <LinearLayout
                    android:id="@+id/llRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:text="4.5" />

                    <com.tripian.trpcore.util.widget.ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="4dp"
                        android:src="@drawable/ic_rating_star" />

                    <TextView
                        android:id="@+id/tvRatingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:fontFamily="@font/medium"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:text="(1,234 opinions)" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/medium"
                    android:lineHeight="24dp"
                    android:maxLines="4"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="The Anne Frank House is a museum dedicated to Jewish wartime diarist Anne Frank. The building is located on a canal called the Prinsengracht, close to the Westerkerk, in central Amsterdam in the Netherlands." />

                <!-- Read More Button -->
                <LinearLayout
                    android:id="@+id/llReadMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:text="Read full description" />

                    <com.tripian.trpcore.util.widget.ImageView
                        android:id="@+id/ivReadMoreChevron"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_chevron_down" />

                </LinearLayout>

            </LinearLayout>

            <!-- Activities Section -->
            <LinearLayout
                android:id="@+id/llActivitiesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="16dp"
                android:visibility="gone"
                tools:visibility="gone">

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineWeak"/>

                <TextView
                    android:id="@+id/tvActivitiesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    tools:text="Activities" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <!-- Key Data Section -->
            <LinearLayout
                android:id="@+id/llKeyDataSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                tools:visibility="visible">

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineWeak" />

                <TextView
                    android:layout_marginTop="40dp"
                    android:id="@+id/tvKeyDataHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    tools:text="Key Data" />

                <!-- Phone Row -->
                <LinearLayout
                    android:id="@+id/llPhoneRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/neutral200"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.tripian.trpcore.util.widget.ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/text_primary" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvPhoneLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="Phone:" />

                        <TextView
                            android:id="@+id/tvPhoneValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/medium"
                            android:layout_marginStart="4dp"
                            android:includeFontPadding="false"
                            android:textColor="@color/fgWeak"
                            android:textSize="16sp"
                            tools:text="+31 20 556 7105" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Opening Hours Row -->
                <LinearLayout
                    android:id="@+id/llOpeningHoursRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:visibility="gone">


                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardBackgroundColor="@color/neutral200"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.tripian.trpcore.util.widget.ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_opening_hours"
                            app:tint="@color/text_primary" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvOpeningHoursLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            tools:text="Opening Hours" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvOpeningHours"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_poi_opening_hour" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Meeting Point Section -->
            <LinearLayout
                android:id="@+id/llMeetingPointSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineWeak" />

                <TextView
                    android:id="@+id/tvMeetingPointHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    tools:text="Meeting Point" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <com.mapbox.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal">

                    <com.tripian.trpcore.util.widget.ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_location_point_civi" />

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/medium"
                        android:textColor="@color/fgWeak"
                        android:textSize="16sp"
                        tools:text="Prinsengracht 263-267, 1016 GV Amsterdam sad asd " />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnViewMap"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/tvViewMap"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:visibility="visible"
                        tools:text="View map" />

                    <com.tripian.trpcore.util.widget.ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="16dp"
                        app:srcCompat="@drawable/ic_view_map" />
                </LinearLayout>

            </LinearLayout>

            <!-- Features Section -->
            <LinearLayout
                android:id="@+id/llFeaturesSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingEnd="0dp"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- Separator -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lineWeak" />

                <TextView
                    android:id="@+id/tvFeaturesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/semibold"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    tools:text="Features" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFeatures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp" />

            </LinearLayout>

            <!-- Bottom spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
