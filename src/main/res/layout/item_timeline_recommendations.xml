<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="20dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trp_bgCloudy"
        android:orientation="vertical">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:padding="16dp"
            android:background="@color/trp_timeline_recommendations_header_bg">

            <!-- Left: Title and Info -->
            <LinearLayout
                android:id="@+id/titleContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Title only - no city, time, places info -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Recommendations"
                    android:textColor="@color/trp_timeline_title_color"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Expand/Collapse Icon -->
            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/ivExpand"
                android:layout_width="16dp"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_height="16dp"
                android:src="@drawable/ic_chevron_down"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/titleContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                android:src="@drawable/ic_delete_recommendation"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Generating State -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progressGenerating"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:indeterminate="true"/>

            <TextView
                android:id="@+id/tvGenerating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Generating your itinerary..."
                android:textSize="14sp"
                android:textColor="@color/trp_timeline_subtitle_color"/>

        </LinearLayout>

        <!-- No Recommendations -->
        <TextView
            android:id="@+id/tvNoRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:gravity="center"
            android:text="No recommendations found for this area"
            android:textSize="14sp"
            android:textColor="@color/trp_timeline_subtitle_color"
            android:visibility="gone"/>

        <!-- Starting Point Row -->
        <LinearLayout
            android:id="@+id/startingPointContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_starting_point"
            tools:visibility="visible"
            android:visibility="gone">

            <!-- Pin Icon -->
            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/ivStartingPointPin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_pin" />

            <!-- Starting Point Name - Medium 14px primaryText -->
            <TextView
                android:id="@+id/tvStartingPointName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:textColor="@color/trp_text_primary"
                android:ellipsize="end"
                tools:text="Hotel ABC | City Center asd sadas dasd asd asd as" />

        </LinearLayout>

        <!-- Route from Starting Point to First Step -->
        <LinearLayout
            android:id="@+id/startingPointRouteContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trp_bgCloudy"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <!-- Walk Icon -->
            <ImageView
                android:id="@+id/ivStartingPointRouteIcon"
                android:layout_width="14dp"
                android:layout_marginStart="4dp"
                android:layout_height="14dp"
                android:contentDescription="Transport Mode"
                android:src="@drawable/ic_itinerary_walk"
                app:tint="#8C8C8C" />

            <!-- Route Info Text -->
            <TextView
                android:id="@+id/tvStartingPointRouteInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/medium"
                android:textColor="#8C8C8C"
                android:textSize="12sp"
                tools:text="5 min (1,2 km)" />

            <!-- Separator Line extending to the right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:layout_marginStart="13dp"
                android:background="#8C8C8C" />

        </LinearLayout>

        <!-- Steps RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSteps"
            android:layout_width="match_parent"
            android:background="@color/trp_bgCloudy"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="20dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
