<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Fixed Header: Back Button + Title -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp">

        <!-- Back Button -->
        <com.tripian.trpcore.util.widget.ImageView
            android:id="@+id/imBack"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_back" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTitle"
                style="@style/TextHeader2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                tools:text="Activities" />
        </LinearLayout>
    </FrameLayout>

    <!-- Fixed: Search Bar -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp">

        <com.tripian.trpcore.util.widget.SearchBarView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <ProgressBar
            android:id="@+id/pbSearchProgress"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/_48sdp"
            android:visibility="gone" />
    </FrameLayout>

    <!-- Fixed: Filter & Sort Buttons Row -->
    <LinearLayout
        android:id="@+id/llFilterSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilters"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:minHeight="@dimen/_32sdp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/medium"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:cornerRadius="@dimen/_16sdp"
            app:icon="@drawable/ic_filter_activity"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_4sdp"
            app:iconSize="@dimen/_14sdp"
            app:iconTint="@null"
            app:strokeColor="@color/lineWeak"
            app:strokeWidth="1dp"
            tools:text="Filters" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSortBy"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_weight="1"
            android:minHeight="@dimen/_32sdp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:fontFamily="@font/medium"
            android:textAllCaps="false"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:cornerRadius="@dimen/_16sdp"
            app:icon="@drawable/ic_order_activity"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/_4sdp"
            app:iconSize="@dimen/_14sdp"
            app:iconTint="@color/text_primary"
            app:strokeColor="@color/lineWeak"
            app:strokeWidth="1dp"
            tools:text="Sort by" />
    </LinearLayout>

    <!-- Fixed: Category Filter -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_68sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Fixed: Result Count -->
    <com.tripian.trpcore.util.widget.TextView
        android:id="@+id/tvResultCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:fontFamily="@font/regular"
        android:textColor="@color/activity_count_label"
        android:textSize="12sp"
        tools:text="150 activities found" />

    <!-- Scrollable: Activity List Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/_16sdp" />

        <!-- Empty State -->
        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvEmpty"
            style="@style/TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_24sdp"
            android:text="No activities found"
            android:textColor="@color/grey_30"
            android:visibility="gone" />

        <!-- Error State -->
        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvError"
            style="@style/TextBody1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_24sdp"
            android:textColor="@color/error"
            android:visibility="gone"
            tools:text="An error occurred" />
    </FrameLayout>

</LinearLayout>
