<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.tripian.trpcore.util.widget.CardView
        android:id="@+id/cvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.tripian.trpcore.util.widget.ImageView
            android:id="@+id/imImage"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_160sdp"
            android:background="@color/blue_soft" />

        <LinearLayout
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_160sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp">

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTitle"
                style="@style/TextSubhead2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                tools:text="Title" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTag"
                style="@style/TextCaption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:textColor="@color/grey"
                tools:text="Caption 2" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rateBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:rating="3.5" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvDescription"
                style="@style/TextBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                tools:text="The Turkish and Islamic Arts Museum is a museum located in Sultanahmet Square in Fatih district of Istanbul, Turkey." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imLike"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:padding="@dimen/_13sdp"
                    app:srcCompat="@drawable/ic_like" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imDislike"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:padding="@dimen/_13sdp"
                    app:srcCompat="@drawable/ic_dislike" />
            </LinearLayout>
        </LinearLayout>

        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvScore"
            style="@style/TextCaption2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_butterfly_match"
            android:padding="@dimen/_4sdp"
            android:textColor="@color/black_soft"
            android:visibility="gone" />
    </com.tripian.trpcore.util.widget.CardView>

    <com.tripian.trpcore.util.widget.CardView
        android:id="@+id/cvTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="@id/cvBottom"
        app:layout_constraintLeft_toLeftOf="@id/cvBottom"
        app:layout_constraintRight_toRightOf="@id/cvBottom"
        app:layout_constraintTop_toTopOf="@id/cvBottom">

        <com.tripian.trpcore.util.widget.ImageView
            android:id="@+id/imTopClose"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="right"
            android:padding="@dimen/_13sdp"
            app:srcCompat="@drawable/ic_close_black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvUndo"
                style="@style/TextFormField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/grey" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTellUs"
                style="@style/TextTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/black_soft" />
        </LinearLayout>
    </com.tripian.trpcore.util.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>