<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trp_white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trp_white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_290sdp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_320sdp"
                android:background="@drawable/bg_transparent_black_layer"
                app:layout_collapseMode="pin" />

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imNavigation"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_6sdp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_create_trip_back" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvName"
                style="@style/TextTitle2"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_12sdp"
                android:textColor="@color/trp_ultra_light_grey"
                android:textStyle="italic"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0"
                tools:text="\@semihozkoroglu semihozkoroglu semihozkoroglu semihozkoroglu" />

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_rounded_top_white"
                android:elevation="@dimen/_8sdp"
                android:minHeight="@dimen/_56sdp"
                android:paddingBottom="@dimen/_4sdp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDescription"
                    style="@style/TextCaption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_toLeftOf="@+id/llActions"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/trp_black_soft"
                    tools:text="Iglesia de San Juan Bautista Bautista Bautista Iglesia de San Juan Bautista Bautista Bautista" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvWhereToTry"
                    style="@style/TextTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDescription"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:textColor="@color/trp_black_soft" />
            </RelativeLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>