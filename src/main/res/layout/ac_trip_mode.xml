    <LinearLayout
        android:id="@+id/llSearchThisArea"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/selector_button_primary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mapView">

        <com.tripian.trpcore.util.widget.ImageView
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_search_white" />

        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvSearchThisArea"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llClearSearch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/selector_button_blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSearchThisArea">

        <com.tripian.trpcore.util.widget.ImageView
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            app:srcCompat="@drawable/ic_close_white" />

        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvClearResults"
            style="@style/TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.tripian.trpcore.util.widget.CardView
        android:id="@+id/cvAlternatives"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_18sdp"
        app:cardElevation="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@id/mapView"
        app:layout_constraintLeft_toLeftOf="parent">

        <com.tripian.trpcore.util.widget.TextView
            android:id="@+id/tvAlternatives"
            style="@style/TextCaption1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:textColor="@color/primary" />
    </com.tripian.trpcore.util.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAlternative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:elevation="@dimen/_6sdp"
        app:fabCustomSize="@dimen/_32sdp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/cvAlternatives"
        app:layout_constraintLeft_toLeftOf="@id/cvAlternatives"
        app:layout_constraintTop_toTopOf="@+id/cvAlternatives"
        app:maxImageSize="@dimen/_18sdp"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/ic_btn_alternatives" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:elevation="@dimen/_6sdp"
        app:fabCustomSize="@dimen/_32sdp"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/btnLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:maxImageSize="@dimen/_12sdp"
        app:rippleColor="@color/white"
        app:srcCompat="@drawable/btn_return"
        tools:visibility="visible"
        app:tint="@color/blue_dark" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:elevation="@dimen/_6sdp"
        app:fabCustomSize="@dimen/_32sdp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/btnAlternative"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnAlternative"
        app:maxImageSize="@dimen/_16sdp"
        app:rippleColor="@color/blue_soft"
        app:srcCompat="@drawable/ic_btn_user_location"
        app:tint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:elevation="@dimen/_6sdp"
        app:fabCustomSize="@dimen/_32sdp"
        app:fabSize="mini"
        app:layout_constraintStart_toStartOf="@+id/btnAlternative"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        app:maxImageSize="@dimen/_16sdp"
        app:rippleColor="@color/blue_soft"
        app:srcCompat="@drawable/ic_offer_search"
        app:tint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnExportPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="visible"
        app:backgroundTint="@color/white"
        app:elevation="@dimen/_6sdp"
        app:fabCustomSize="@dimen/_32sdp"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlTop"
        app:maxImageSize="@dimen/_16sdp"
        app:srcCompat="@drawable/btn_google_export"
        android:tintMode="screen" />
</androidx.constraintlayout.widget.ConstraintLayout>