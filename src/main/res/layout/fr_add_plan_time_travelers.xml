<?xml version="1.0" encoding="utf-8"?>
<!-- FRTimeAndTravelers - Step 2: Starting Point, Time Selection, Travelers -->
<!-- iOS Reference: AddPlanTimeAndTravelersVC.swift -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="24dp">

        <!-- ==================== -->
        <!-- ADD TO DAY Section   -->
        <!-- ==================== -->

        <!-- "Add to Day" Label -->
        <TextView
            android:id="@+id/tvAddToDayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/light"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            tools:text="Add to Day"/>

        <!-- Day Filter RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDays"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:paddingHorizontal="16dp"
            android:orientation="horizontal"
            tools:listitem="@layout/item_day_filter"/>

        <!-- ==================== -->
        <!-- CITY SELECTION       -->
        <!-- ==================== -->
        <LinearLayout
            android:id="@+id/llCitySelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tvCityLabel"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/light"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                tools:text="City"/>

            <FrameLayout
                android:id="@+id/btnCitySelection"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_input_field"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tvSelectedCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="40dp"
                    android:fontFamily="@font/medium"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    tools:text="Barcelona"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_chevron_down"
                    android:tint="@color/text_primary"/>

            </FrameLayout>

        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/neutral200"/>

        <!-- ==================== -->
        <!-- STARTING POINT       -->
        <!-- ==================== -->

        <!-- "Select a Starting Point" -->
        <TextView
            android:id="@+id/tvSelectStartingPointLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/semibold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            tools:text="Select a Starting Point"/>

        <!-- Starting Point Button (48dp) -->
        <FrameLayout
            android:id="@+id/btnStartingPoint"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_input_field"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvStartingPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="40dp"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                tools:text="City Center"/>

            <!-- Clear Button (X) -->
            <ImageButton
                android:id="@+id/btnClearStartingPoint"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_close"
                android:tint="@color/fgWeak"
                android:visibility="gone"
                android:contentDescription="Clear"/>

        </FrameLayout>

        <!-- ==================== -->
        <!-- TIME SELECTION       -->
        <!-- ==================== -->

        <!-- "Select time" -->
        <TextView
            android:id="@+id/tvSelectTimeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/semibold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            tools:text="Select time"/>

        <!-- Time Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Start Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStartTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    tools:text="Start Time"/>

                <FrameLayout
                    android:id="@+id/btnStartTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_time"/>

                        <TextView
                            android:id="@+id/tvStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/medium"
                            android:textSize="14sp"
                            android:textColor="@color/fgWeak"
                            tools:text="Select"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <!-- End Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEndTimeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/light"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    tools:text="End Time"/>

                <FrameLayout
                    android:id="@+id/btnEndTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/bg_input_field"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_time"
                            android:tint="@color/fgWeak"/>

                        <TextView
                            android:id="@+id/tvEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:fontFamily="@font/medium"
                            android:textSize="14sp"
                            android:textColor="@color/fgWeak"
                            tools:text="Select"/>

                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- ==================== -->
        <!-- TRAVELERS            -->
        <!-- ==================== -->

        <!-- "Select Travelers" -->
        <TextView
            android:id="@+id/tvSelectTravelersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/semibold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            tools:text="Select Travelers"/>

        <!-- Travelers Counter Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTravelersLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/medium"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                tools:text="Travelers"/>

            <!-- Minus Button (32x32, circle) -->
            <ImageButton
                android:id="@+id/btnMinus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_minus"
                android:tint="@color/fgWeak"
                android:contentDescription="Decrease"/>

            <!-- Count -->
            <TextView
                android:id="@+id/tvTravelerCount"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/medium"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:text="1"/>

            <!-- Plus Button (32x32, circle) -->
            <ImageButton
                android:id="@+id/btnPlus"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ic_increase"
                android:tint="@color/fgWeak"
                android:contentDescription="Increase"/>

        </LinearLayout>

        <!-- Bottom Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="24dp"
            android:background="@color/neutral200"/>

    </LinearLayout>

</ScrollView>
