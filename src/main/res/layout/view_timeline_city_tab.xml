<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trp_white"
    app:tabMode="scrollable"
    app:tabGravity="start"
    app:tabIndicatorColor="@color/trp_timeline_accent"
    app:tabIndicatorHeight="3dp"
    app:tabSelectedTextColor="@color/trp_timeline_title_color"
    app:tabTextColor="@color/trp_timeline_subtitle_color"
    app:tabTextAppearance="@style/TrpTimelineTabTextAppearance"/>
