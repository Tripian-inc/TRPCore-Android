<!--                android:id="@+id/tvCompanionPlaceholder"-->
<!--                style="@style/TextBody2Regular"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:paddingTop="@dimen/_12sdp"-->
<!--                android:paddingBottom="@dimen/_12sdp"-->
<!--                android:text="@string/please_select_companion"-->
<!--                android:textColor="@color/trp_text_primary" />-->

<!--        </LinearLayout>-->


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tagCompanionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:chipSpacingHorizontal="@dimen/_8sdp">

        </com.google.android.material.chip.ChipGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llCreateCompanion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:background="@drawable/bg_oval_transparent"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_2sdp">

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvCreateCompanion"
                style="@style/TextBody2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:textColor="@color/trp_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imCreateCompanion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imCreateCompanion"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add_rectangle" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>