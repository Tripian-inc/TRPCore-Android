<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardToast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:layout_marginBottom="45dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/llToastContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Left color accent border -->
        <View
            android:id="@+id/viewAccentBorder"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/trp_success_message" />

        <ImageView
            android:id="@+id/ivToastIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_check_circle_green" />

        <TextView
            android:id="@+id/tvToastMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:textColor="@color/trp_text_primary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            tools:text="La actividad Visita guiada Museos Vaticanos y Capilla Sixtina se ha añadido al día Miércoles 13/05" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
