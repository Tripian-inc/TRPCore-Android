<?xml version="1.0" encoding="utf-8"?>
<!-- FRCategorySelection - Step 3: Smart Recommendation Categories (7 categories) -->
<!-- iOS Reference: AddPlanCategorySelectionVC.swift -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <!-- "Select the Categories You Want" -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:fontFamily="@font/semibold"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        tools:text="Select Categories"/>

    <!-- Category Grid RecyclerView -->
    <!-- GridLayoutManager spanCount=3, itemSpacing=8dp -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_smart_category"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="3"/>

    <!-- Bottom Separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="24dp"
        android:background="@color/neutral200"/>

</LinearLayout>
