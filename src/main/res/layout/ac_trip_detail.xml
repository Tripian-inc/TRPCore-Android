<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_280sdp"
            android:minHeight="@dimen/_48sdp"
            android:paddingBottom="@dimen/_8sdp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vpPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                android:background="@color/grey_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_190sdp"
                android:background="@drawable/bg_offer_image_bottom"
                android:elevation="@dimen/_12sdp" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvOwner"
                style="@style/TextBody3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_alignStart="@+id/tvTitle"
                android:layout_centerVertical="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_24sdp"
                android:maxLines="1"
                android:padding="@dimen/_24sdp"
                android:shadowColor="#000"
                android:shadowDx="-2"
                android:shadowDy="-2"
                android:shadowRadius="1"
                android:textColor="@color/white"
                tools:text="semihozkoroglu" />

            <com.tripian.gyg.widget.indicator.PageIndicatorView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="@dimen/_12sdp"
                app:piv_animationType="scale"
                app:piv_dynamicCount="true"
                app:piv_interactiveAnimation="true"
                app:piv_padding="12dp"
                app:piv_radius="4dp"
                app:piv_selectedColor="@color/primary"
                app:piv_unselectedColor="@color/shade_violet"
                app:piv_viewPager="@id/vpPager" />

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                app:srcCompat="@drawable/im_line" />

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imNavigation"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_6sdp"
                app:layout_collapseMode="pin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_create_trip_back" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/llContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingBottom="@dimen/_4sdp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvTitle"
                    style="@style/TextTitle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/head"
                    tools:text="Iglesia de San Juan Bautista Bautista Bautista" />

                <LinearLayout
                    android:id="@+id/llRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitle"
                    android:layout_alignStart="@+id/tvTitle"
                    android:layout_alignEnd="@+id/tvTitle"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvRate"
                        style="@style/TextCaption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/body"
                        android:visibility="gone"
                        tools:text="(234)" />

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/rateBar"
                        android:layout_marginStart="@dimen/_4sdp"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="3.5"
                        android:theme="@style/AppThemeYellow"
                        android:visibility="gone" />

                    <View
                        android:id="@+id/viDot"
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:background="@drawable/bg_circle_gray_full"
                        android:textColor="@color/extra_main"
                        android:visibility="gone" />

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvPrice"
                        style="@style/TextCaption1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textColor="@color/body"
                        android:visibility="gone"
                        tools:text="Price" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llRate"
                    android:layout_alignStart="@+id/tvTitle"
                    android:layout_alignEnd="@+id/tvTitle"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvMatch"
                        style="@style/TextBody2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pink"
                        android:visibility="gone"
                        tools:text="98% match" />

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvPartOfDay"
                        style="@style/TextBody3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textColor="@color/body"
                        android:visibility="gone"
                        tools:text="- Part of the day 1" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imAction"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:background="@drawable/bg_trip_action"
                    android:clickable="true"
                    android:padding="@dimen/_12sdp"
                    app:srcCompat="@drawable/ic_plus" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imRoute"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/ic_favorite_bg"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_navigation" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imFavorite"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/ic_favorite_bg"
                    android:clickable="true"
                    android:padding="@dimen/_12sdp"
                    app:srcCompat="@drawable/ic_favorite2" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imShare"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_share_place" />
            </LinearLayout>

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="@dimen/_12sdp"
                app:srcCompat="@drawable/im_line" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOffers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_offer_detail" />

            <RelativeLayout
                android:id="@+id/llDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/shape_click_transparent"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imDescription"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_description" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDescription"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_toStartOf="@+id/imDescriptionArrow"
                    android:layout_toEndOf="@+id/imDescription"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:textColor="@color/body"
                    tools:text="turkish turkish turkish turkish turkish turkish" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imDescriptionArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llMustTry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_must_tries" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvMustTry"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/body"
                    tools:text="This spot serves one of the best inegöl meatballs, Meatballs, Kofta in İstanbul" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCuisines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    app:srcCompat="@drawable/ic_chef" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvCuisines"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/body"
                    tools:text="turkish" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_hashtag" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvTags"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/body"
                    tools:text="vegaterian,kids menu,organic dishes,salad,takeaway,waiter service,lunch,dinner,kid friendly,dessert" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_open" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvHours"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/body"
                    tools:text="Sun: 10:30 AM - 11:00 PM" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    app:srcCompat="@drawable/ic_arrow_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_phone" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvPhone"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/blue"
                    tools:text="905333331111" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_link" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvLink"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:textColor="@color/blue"
                    tools:text="http://sultanahmet.com" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/shape_click_transparent"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40sdp"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    app:srcCompat="@drawable/ic_pin" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvAddress"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/body"
                    tools:text="Alemdar, Divan Yolu cad. No:12 34110 Fatih/İstanbul Turkey" />
            </LinearLayout>

            <com.tripian.trpcore.util.widget.Button
                android:id="@+id/btnReservation"
                style="@style/TextButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@drawable/selector_button_primary"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.tripian.trpcore.util.widget.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/llGyg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp"
                android:visibility="gone">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvGygTitle"
                    style="@style/TextTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/head" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvGygDescription"
                    style="@style/TextSubhead1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/red_A200"
                    tools:text="Covering" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGetYourGuides"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_experiences_inner" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>