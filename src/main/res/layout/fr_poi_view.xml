<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:paddingStart="@dimen/_14sdp"
    android:paddingEnd="@dimen/_14sdp"
    android:paddingBottom="@dimen/_64sdp">

    <com.tripian.trpcore.util.widget.CardView
        android:id="@+id/cvItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:contentPaddingBottom="@dimen/_10sdp"
        app:contentPaddingTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imPoi"
                android:layout_width="@dimen/_56sdp"
                android:layout_height="@dimen/_56sdp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                app:srcCompat="@color/black_soft" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTitle"
                style="@style/TextSubhead1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toRightOf="@+id/imPoi"
                android:textColor="@color/grey"
                tools:text="Finish Museum of Natural History" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvDescription"
                style="@style/TextCaption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toLeftOf="@+id/imAction"
                android:layout_toRightOf="@+id/imPoi"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grey"
                tools:text="@string/change_plan_time" />

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imAction"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="@dimen/_6sdp"
                app:srcCompat="@drawable/ic_minus_box_red" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rateBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescription"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toRightOf="@+id/imPoi"
                android:rating="3.5"
                android:theme="@style/AppThemeYellow" />
        </RelativeLayout>
    </com.tripian.trpcore.util.widget.CardView>
</FrameLayout>