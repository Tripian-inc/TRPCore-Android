<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tripian.trpcore.util.widget.ImageView
            android:id="@+id/imNavigation"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:clickable="true"
            app:srcCompat="@drawable/ic_create_trip_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imNavigation"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvTitle"
                style="@style/TextHeader2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center" />

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                app:srcCompat="@drawable/im_line" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnRegister"
        android:layout_below="@+id/rlTop"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="@dimen/_32sdp"
            android:paddingTop="@dimen/_16sdp"
            android:paddingEnd="@dimen/_32sdp">

            <com.tripian.trpcore.util.widget.EditText
                android:id="@+id/etFirstName"
                style="@style/TextFormField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_oval_gray"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp" />

            <com.tripian.trpcore.util.widget.EditText
                android:id="@+id/etLastName"
                style="@style/TextFormField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_oval_gray"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp" />

            <com.tripian.trpcore.util.widget.EditText
                android:id="@+id/etMail"
                style="@style/TextFormField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_oval_gray"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp" />


            <RelativeLayout
                android:id="@+id/rlPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.EditText
                    android:id="@+id/etPassword"
                    style="@style/TextFormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_oval_gray"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imShowPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_9sdp"
                    app:srcCompat="@drawable/ic_eye_off" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp">

                <com.tripian.trpcore.util.widget.EditText
                    android:id="@+id/etPassword2"
                    style="@style/TextFormField"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_oval_gray"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp" />

                <com.tripian.trpcore.util.widget.ImageView
                    android:id="@+id/imShowPassword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_9sdp"
                    app:srcCompat="@drawable/ic_eye_off" />
            </RelativeLayout>

            <com.tripian.trpcore.util.widget.EditText
                android:id="@+id/etBirthDate"
                style="@style/TextFormField"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_oval_gray"
                android:inputType="number"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_10sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.tripian.trpcore.util.widget.Button
                    android:id="@+id/chkToe"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_check_empty_new"/>
                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvToe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.tripian.trpcore.util.widget.Button
        android:id="@+id/btnRegister"
        style="@style/TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_32sdp"
        android:layout_marginEnd="@dimen/_32sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:background="@drawable/selector_button_primary"
        android:textAllCaps="false"
        android:textColor="@color/trp_white" />
</RelativeLayout>
