<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trp_transparent"
    android:orientation="vertical">

    <com.tripian.trpcore.util.widget.TextView
        android:id="@+id/tvTitle"
        style="@style/TextHeader2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56sdp"
        android:background="@drawable/bg_rounded_top_white"
        android:gravity="center"
        android:paddingTop="@dimen/_16sdp"
        tools:text="Ankara" />

    <com.tripian.trpcore.util.widget.TextView
        android:id="@+id/tvDate"
        style="@style/TextBody3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/trp_white"
        android:gravity="center_horizontal"
        android:textColor="@color/trp_body"
        tools:text="15 Feb 2021 - 16 Feb 2021" />

    <com.tripian.trpcore.util.widget.TextView
        android:id="@+id/tvEdit"
        style="@style/TextBody1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/trp_white"
        android:gravity="center"
        android:textColor="@color/trp_body" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trp_white">

        <com.tripian.trpcore.util.widget.ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/im_line" />
    </FrameLayout>

    <com.tripian.trpcore.util.widget.TextView
        android:id="@+id/tvDelete"
        style="@style/TextBody1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/trp_white"
        android:gravity="center"
        android:textColor="@color/trp_body" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/trp_white">

        <com.tripian.trpcore.util.widget.Button
            android:id="@+id/btnCancel"
            style="@style/TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_24sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:background="@drawable/selector_button_primary"
            android:textColor="@color/trp_white" />
    </FrameLayout>
</LinearLayout>