<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgCloudy"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="20dp">

    <!-- Order-Time Container (130x32, border) -->
    <LinearLayout
        android:id="@+id/orderTimeContainer"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/bg_order_time_container"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Order Badge (20x20, fg bg, 6px left margin) -->
        <TextView
            android:id="@+id/tvOrder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/bg_step_order_new"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="1" />

        <!-- Time (startTime - endTime, 10px right margin) -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/medium"
            android:gravity="end"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            tools:text="09:00 - 11:30" />

    </LinearLayout>

    <!-- Vertical Line (1x24, 16px left margin, connected to container) -->
    <View
        android:id="@+id/verticalLine"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:background="@color/lineWeak" />

    <!-- Content Row (Image + Details) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image 80x80, 4dp corner radius -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bgCloudy"
                android:contentDescription="Activity Image"
                android:scaleType="centerCrop" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title Row - Title + Delete Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title - semibold 16px primaryText -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/semibold"
                        android:maxLines="2"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        tools:text="Guided tour of the Basilica" />

                    <LinearLayout
                        android:id="@+id/llRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <!-- Rating Value - Bold 14px -->
                        <TextView
                            android:id="@+id/tvRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            tools:text="4.5" />

                        <!-- Star Icon 12x12 -->
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="2dp"
                            android:contentDescription="Rating"
                            android:src="@drawable/ic_rating_star" />

                        <!-- Review Count - Light 14px fgWeak -->
                        <TextView
                            android:id="@+id/tvReviewCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/medium"
                            android:textColor="@color/fgWeak"
                            android:textSize="14sp"
                            tools:text="1,234 opinions" />

                    </LinearLayout>

                    <!-- Duration Row - icon 16x16, text -->
                    <LinearLayout
                        android:id="@+id/llDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:contentDescription="Duration"
                            android:src="@drawable/ic_duration" />

                        <TextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/medium"
                            android:textColor="@color/text_primary"
                            android:textSize="14sp"
                            tools:text="2.5 hours" />

                    </LinearLayout>

                    <!-- Cancellation - Medium 14px, advantage color -->
                    <TextView
                        android:id="@+id/tvCancellation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/medium"
                        android:textColor="@color/advantage"
                        android:textSize="14sp"
                        tools:text="Free cancellation" />

                </LinearLayout>

                <!-- Remove Step Button -->
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Remove"
                    android:src="@drawable/ic_remove_step" />

            </LinearLayout>

            <!-- Rating Row - rating + star + review count (hide if no data) -->


            <!-- Price Row - Bottom Right -->
            <LinearLayout
                android:id="@+id/llPriceRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <!-- From Label - Medium 14sp -->
                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvFromLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    tools:text="From " />

                <!-- Price - Bold 16sp -->
                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    tools:text="$49" />
            </LinearLayout>

            <!-- Reservation Button - Primary style -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReservation"
                style="@style/ButtonPrimary"
                android:layout_height="@dimen/_31sdp"
                android:layout_marginTop="@dimen/_8sdp"
                tools:text="Reservation" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
