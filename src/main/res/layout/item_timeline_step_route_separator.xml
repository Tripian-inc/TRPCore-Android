<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/trp_bgCloudy"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="14dp">

    <!-- Walk Icon -->
    <ImageView
        android:id="@+id/ivTransportIcon"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:contentDescription="Transport Mode"
        android:src="@drawable/ic_itinerary_walk"
        app:tint="#8C8C8C" />

    <!-- Route Info Text (e.g., "5 min (1,2 km)") -->
    <TextView
        android:id="@+id/tvRouteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/medium"
        android:textColor="#8C8C8C"
        android:textSize="12sp"
        tools:text="5 min (1,2 km)" />

    <!-- Separator Line extending to the right -->
    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_weight="1"
        android:layout_marginStart="13dp"
        android:background="#8C8C8C" />

</LinearLayout>
