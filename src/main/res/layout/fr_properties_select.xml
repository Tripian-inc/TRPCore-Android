<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/_16sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_oval_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp">

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_select_date" />

            <LinearLayout
                android:id="@+id/llArrivalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingBottom="@dimen/_12sdp">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvArrivalMonth"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    tools:text="June" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvArrivalDay"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textColor="@color/body"
                    tools:text="23" />

                <com.tripian.trpcore.util.widget.TextView
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    android:text="," />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvArrivalYear"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textColor="@color/body"
                    tools:text="2020" />
            </LinearLayout>

            <com.tripian.trpcore.util.widget.TextView
                style="@style/TextBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/body" />

            <LinearLayout
                android:id="@+id/llArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_4sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvArrivalTime"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    tools:text="09:00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_oval_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp">

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_select_date" />

            <LinearLayout
                android:id="@+id/llDepartureDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:paddingBottom="@dimen/_12sdp">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDepartureMonth"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    tools:text="June" />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDepartureDay"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textColor="@color/body"
                    tools:text="23" />

                <com.tripian.trpcore.util.widget.TextView
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    android:text="," />

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDepartureYear"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textColor="@color/body"
                    tools:text="2020" />
            </LinearLayout>

            <com.tripian.trpcore.util.widget.TextView
                style="@style/TextBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/body" />

            <LinearLayout
                android:id="@+id/llDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_4sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp">

                <com.tripian.trpcore.util.widget.TextView
                    android:id="@+id/tvDepartureTime"
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/body"
                    tools:text="09:00" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPassengerCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/bg_oval_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp">

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_select_companion" />

            <com.tripian.trpcore.util.widget.TextView
                android:id="@+id/tvPassengerCount"
                style="@style/TextBody2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_8sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:textColor="@color/body"
                tools:text="1 Adult, No children" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlCompanionSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp">

                <com.tripian.trpcore.util.widget.TextView
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/extra_main" />

                <LinearLayout
                    android:id="@+id/llCompanion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.tripian.trpcore.util.widget.ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_select_traveler" />

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvCompanions"
                        style="@style/TextBody2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textColor="@color/body"
                        tools:text="1 Adult, No children" />
                </LinearLayout>
            </LinearLayout>

            <com.tripian.trpcore.util.widget.ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_right_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp">

            <LinearLayout
                android:id="@+id/llStay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_24sdp"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <com.tripian.trpcore.util.widget.TextView
                    style="@style/TextBody2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/extra_main" />

                <LinearLayout
                    android:id="@+id/llHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.tripian.trpcore.util.widget.ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_select_hotel" />

                    <com.tripian.trpcore.util.widget.TextView
                        android:id="@+id/tvHotel"
                        style="@style/TextBody2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/body"
                        tools:text="1 Adult, No children  1 Adult, No children 1 Adult, No children 1 Adult, No children" />
                </LinearLayout>
            </LinearLayout>

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imCancelHotel"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/llStay"
                android:visibility="gone"
                android:padding="@dimen/_8sdp"
                app:srcCompat="@drawable/ic_close_black" />

            <com.tripian.trpcore.util.widget.ImageView
                android:id="@+id/imArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="visible"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_right_gray" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>