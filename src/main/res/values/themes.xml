<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TrpBaseAppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/trp_primary</item>
        <item name="colorPrimaryDark">@color/trp_white</item>
        <item name="colorAccent">@color/trp_primary</item>
        <item name="colorOnPrimary">@color/trp_white</item>
        <item name="android:textColorPrimary">@color/trp_text_primary</item>

        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@color/trp_white</item>
        <item name="android:colorBackground">@color/trp_white</item>

        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>

        <item name="android:scrollbarSize">0dp</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>

        <!-- Status bar: white background with dark icons -->
        <item name="android:statusBarColor">@color/trp_white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar: white background with dark icons -->
        <item name="android:navigationBarColor">@color/trp_white</item>

        <item name="android:fitsSystemWindows">true</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <style name="TrpAppTheme" parent="TrpBaseAppTheme" />

    <style name="TrpAppTheme.Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="TrpAppTheme.BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>

        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="TrpAppThemeYellow" parent="TrpBaseAppTheme">
        <item name="colorPrimaryDark">@color/trp_yellow</item>
        <item name="colorAccent">@color/trp_yellow</item>
    </style>

    <style name="TrpDefaultNumberPickerTheme" parent="TrpAppTheme">
        <item name="colorControlNormal">@color/trp_ultra_light_grey</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:textColor">@color/trp_black87</item>
    </style>

    <style name="TrpTimePickerTheme" parent="TrpAppTheme">
        <item name="colorControlNormal">@color/trp_neutral200</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/trp_text_primary</item>
    </style>

    <style name="TrpDatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/trp_primary</item>
        <item name="colorPrimaryDark">@color/trp_primary</item>
        <item name="colorAccent">@color/trp_primary</item>
        <item name="android:textColorPrimary">@color/trp_text_primary</item>
        <item name="android:textColorSecondary">@color/trp_text_primary</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/TrpDatePickerButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/TrpDatePickerButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/TrpDatePickerButton</item>
    </style>

    <style name="TrpDatePickerButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/trp_primary</item>
    </style>


    <style name="TrpChipCompanionSelectBackground" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipCornerRadius">@dimen/_10sdp</item>
        <item name="chipBackgroundColor">@color/trp_extra_sub</item>
        <item name="android:textAppearance">@style/TextBody2Regular</item>
    </style>

    <style name="Trp.Widget.PillInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/trp_main_gray_bg</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/trp_stroke_grey_20</item>
        <item name="shapeAppearance">@style/Trp.ShapeAppearance.Pill</item>
        <item name="android:layout_margin">0dp</item>
        <item name="hintTextColor">@color/trp_main_dark</item>
    </style>

    <style name="Trp.ShapeAppearance.Pill" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Trp.Widget.PillTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">none</item>
        <item name="boxBackgroundColor">@color/trp_transparent</item>
        <item name="boxStrokeColor">@color/trp_transparent</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="hintTextAppearance">@style/TrpPillHint</item>
        <item name="helperTextTextAppearance">@style/TrpPillHelper</item>
    </style>

    <style name="TrpPillHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/inter_tight_medium</item>
        <item name="android:textColor">@color/trp_main_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TrpPillHelper" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/inter_tight_regular</item>
        <item name="android:textColor">@color/trp_text_dark_64</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Timeline Styles -->
    <style name="TrpTimelineTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TrpRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="TrpAppThemeWhite" parent="TrpBaseAppTheme">
        <item name="android:windowBackground">@color/trp_white</item>
        <item name="android:statusBarColor">@color/trp_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/trp_white</item>
    </style>

    <style name="TrpTimelineBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TrpTimelineBottomSheet</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TrpTimelineBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <!-- AddPlan Continue Button Style -->
    <style name="TrpButtonPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/semibold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/btn_continue_selector</item>
        <item name="cornerRadius">24dp</item>
        <item name="rippleColor">@color/trp_white</item>
    </style>
</resources>
